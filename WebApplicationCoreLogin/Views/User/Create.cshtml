@model WebApplicationCoreLogin.Models.ViewModel.UserViewModel
@{
	ViewData["Title"] = "Register";
}

<div class="row">
	<div class="col-md-4 offset-4">
		<h1>@ViewData["Title"]</h1>
	</div>
</div>

<div class="row">
	<div class="col-md-4 offset-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly"></div>

			<div class="form-group mb-3">
			<i class="fa-regular fa-user "></i>
			<label asp-for="Username" class="form-label">Username</label>
			<input asp-for="Username" class="form-control" placeholder="username" />
			<span asp-validation-for="Username"></span>
			</div>
		<div class="form-group mb-3">
			<i class="fa-solid fa-key fa-spin"></i>
			<label asp-for="Password" class="form-label">Password</label>
			<input asp-for="Password" class="form-control" placeholder="password" />
			<span asp-validation-for="Password"></span>
		</div>
		<div class="form-group mb-3">
			<i class="fa-solid fa-ranking-star"></i>
			<label asp-for="Role" class="form-label">Role</label>
			<input asp-for="Role" class="form-control" placeholder="role" />
			<span asp-validation-for="Role"></span>
		</div>
		<div class="form-group mb-3">
			<button class="btn btn-success"><i class="fa-solid fa-user me-2"></i>Register</button>
		</div>
		</form>

	</div>
</div>